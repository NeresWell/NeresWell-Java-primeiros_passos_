package controle;

import java.util.Scanner;

public class DesafioWhile {

	public static void main(String[] args) {
		// calcular media de alunos  
		// digitar nota valida 0 a 10 e armazenar em uma variavel totalNotasDigitadas
		// avisar nota invalida
		// variavel para contar notas validas para calcular a media
		// calcular media totalNotasDigitadas / notasValidasdigitadas
		// sair digitar -1
		
		Scanner sc = new Scanner(System.in);
		double notasValidasdigitadas = 0;
		double totalNotasDigitadas = 0;
		
		double nota = 0;

		do {
			System.out.println("digite uma nota: ");
			nota = sc.nextDouble();
			notasValidasdigitadas += 1;
			totalNotasDigitadas = totalNotasDigitadas+ nota;
		} while (nota != -1);
//		while (nota >= 0 && nota <= 10) {
//			nota = sc.nextDouble();
//			totalNotasDigitadas = totalNotasDigitadas + nota;
//			notasValidasdigitadas +=1;
//		}
		
		double resultado = totalNotasDigitadas / notasValidasdigitadas;
		
		System.out.println(totalNotasDigitadas);
		System.out.println(notasValidasdigitadas);
		System.out.println(nota);
		System.out.println(resultado);
		
		sc.close();
	}
}
