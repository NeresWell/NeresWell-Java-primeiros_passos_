package controle;

import java.util.Scanner;

public class DesafioWhile {

	public static void main(String[] args) {
		// calcular media de alunos totalNotasDigitadas / notasValidasdigitadas
		// digitar nota valida 0 a 10
		// avisar nota invalida
		// variavel para contar notas validas para calcular a media
		// calcular media
		// sair digitar -1
		
		Scanner sc = new Scanner(System.in);
		
		int notasValidasdigitadas = 0;
		double totalNotasDigitadas = sc.nextDouble();
		
		do {
			System.out.println("digite uma nota");
			totalNotasDigitadas += 1;
		} while (totalNotasDigitadas >=0 && totalNotasDigitadas <=10);
		
		double resultado = totalNotasDigitadas / notasValidasdigitadas;
		System.out.println("MÃ©dia: " + resultado);
		sc.close();
	}
}
